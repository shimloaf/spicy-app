<resources>

    <style name="SpicyClamato.DefaultTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/darker_blue</item>
        <item name="colorAccent">@color/sky_blue</item>
        <item name="backgroundColor">@color/dark_surface</item>
        <item name="android:textAppearance">@style/TextTheme</item>

        <item name="ChipStyle">@style/ChipStyle</item>

    </style>

    <style name="SpicyClamato.DefaultTheme.NoActionBar" parent="SpicyClamato.DefaultTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="HeaderTheme">
        <item name="android:fontFamily">@font/seguibl</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/dark_blue</item>
    </style>

    <style name="NavMenu">
        <item name="android:fontFamily">@font/seguibl</item>
    </style>

    <style name="SpicyClamato.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:fontFamily">@font/seguibl</item>
        <item name="android:textColor">@color/dark_surface</item>
    </style>

    <style name="SpicyClamato.PopupOverlay" parent="Theme.MaterialComponents.DayNight">
        <item name="android:fontFamily">@font/seguibl</item>
        <item name="android:textColor">@color/dark_surface</item>
    </style>

    <style name="TextTheme">
        <item name="android:fontFamily">@font/seguibl</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/bright_orange</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:text">Game Title</item>
        <item name="android:colorPrimaryDark">@color/bright_orange</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:fontFamily">@font/seguibl</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="IconTheme">
        <item name="android:tint">@color/white</item>
    </style>

</resources>
